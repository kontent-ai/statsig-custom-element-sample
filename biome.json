{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["@kontent-ai/biome-config/base", "@kontent-ai/biome-config/react"],
  "files": {
    "includes": [
      "!!.netlify",
      "!!dist",
      "!!example-client/dist",
      "!!example-client/node_modules",
      "!!public"
    ]
  },
  "javascript": {
    "globals": ["CustomElement"]
  },
  "linter": {
    "rules": {
      "a11y": {
        "noStaticElementInteractions": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["example-client/src/models/**"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          },
          "correctness": {
            "useImportExtensions": "off"
          }
        }
      }
    }
  ]
}
